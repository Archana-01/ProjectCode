<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgrndColor"
    tools:context="android.example.com.emergencyaid.EndTripActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/startloctext"
        android:gravity = "center_horizontal"

        android:fontFamily="Droid Sans Mono"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:text="to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startloctext"
        android:layout_marginTop="30dp"
        android:gravity = "center_horizontal"
        android:id="@+id/totext"
        android:fontFamily="Droid Sans Mono"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totext"
        android:layout_marginTop="31dp"
        android:gravity = "center_horizontal"
        android:id="@+id/endloctext"
        android:textColor="#000000"
        android:fontFamily="Droid Sans Mono"
        android:textSize="24sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:id="@+id/startedTimeLabel"
        android:padding="12px"
        android:layout_margin="24px"
        android:text="Trip's start time:       "
        android:fontFamily="Dancing Script Bold"
        android:textSize="20sp"
        android:layout_below="@+id/endloctext"
        android:layout_toRightOf="@+id/latitudeText"
        android:layout_toEndOf="@+id/latitudeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity = "right"
        android:id="@+id/startedTime"
        android:padding="12px"
        android:layout_margin="24px"

        android:fontFamily="Dancing Script Bold"
        android:textSize="20sp"
        android:layout_below="@+id/endloctext"
        android:layout_toRightOf="@+id/startedTimeLabel"
        />

    <Button
        android:text="End trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endloctext"
        android:layout_marginTop="82dp"
        android:layout_centerVertical="true"
        android:layout_gravity = "center_horizontal"
        android:id="@+id/endTripbtn"
        android:onClick="endTrip"
        android:textSize="24sp"
        android:background="@drawable/button_rounded_stop_trip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endTripbtn"
        android:layout_toLeftOf="@+id/endTripbtn"
        android:layout_toStartOf="@+id/endTripbtn"
        android:layout_marginTop="69dp"
        android:id="@+id/latitudeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/latitudeText"
        android:layout_toRightOf="@+id/endTripbtn"
        android:layout_toEndOf="@+id/endTripbtn"
        android:id="@+id/longitudeText" />

</RelativeLayout>
